---
import { designResources } from "../data/designData"
---

<section id="diseño" class="p-4 mb-40">
  <h1 class="mb-6 text-3xl font-bold">Diseño</h1>

  <div class="flex flex-col justify-center gap-4">
    {
      designResources.map((info) => (
        <div class="flex flex-col gap-2 items-start">
          <h2 class="text-2xl font-bold underline">{info.name}</h2>
          <img src={info.img} alt={info.name} class="rounded-lg" />
          <p>{info.description}</p>
          <a
            href={info.url}
            target="_blank"
            class="p-4 mb-20 flex items-center justify-center gap-2 text-xs font-mono border border-dashed dark:border-white/40 border-black/40 rounded-lg bg-gray-700/10 no-underline transition duration-300 hover:dark:bg-white/10 hover:bg-black/10 hover:dark:shadow-[0_0_0_4px_rgba(255,255,255,0.1)] hover:shadow-[0_0_0_4px_rgba(0,0,0,0.1)]"
          >
            Ir al sitio
          </a>
        </div>
      ))
    }
  </div>
</section>
