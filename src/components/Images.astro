---
import { imageResources } from "../data/imageData"
---

<section id="imagenes" class="p-4 mb-40">
  <h1 class="mb-6 text-3xl font-bold">Im√°genes</h1>

  <div class="flex flex-col justify-center gap-4">
    {
      imageResources.map((info) => (
        <div class="flex flex-col gap-4 items-start">
          <h2 class="text-2xl font-bold underline">{info.name}</h2>
          <img src={info.img} alt={info.name} class="rounded-lg" />
          <p>{info.description}</p>
          <a
            href={info.url}
            target="_blank"
            class="bg-slate-200 dark:bg-slate-800 p-4 mb-20 flex items-center justify-center gap-2 text-xs font-mono border border-dashed border-white/40 rounded-lg bg-gray-700/10 text-white no-underline transition duration-300 hover:bg-white/10 hover:shadow-[0_0_0_4px_rgba(255,255,255,0.1)]"
          >
            Ir al sitio
          </a>
        </div>
      ))
    }
  </div>
</section>
